{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "allowJs": false,
    "strict": false,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src/lib/**/*",
    "scripts/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}